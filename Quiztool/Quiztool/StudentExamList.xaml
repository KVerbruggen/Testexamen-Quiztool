        <Button x:Name="btTeacherLogin" Content="Terug" Grid.Column="1" HorizontalAlignment="Left" Margin="190,10,0,0" VerticalAlignment="Top" Width="50" Background="White" Height="23" Click="btTeacherLogin_Click"/>

